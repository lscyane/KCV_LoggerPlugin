                <m:LogInterval Interval="60"    Text="１時間"/>
                <m:LogInterval Interval="360"   Text="６時間"/>
                <m:LogInterval Interval="720"   Text="12時間"/>
                <m:LogInterval Interval="1440"  Text="24時間"/>
            </x:Array>
        </Grid.Resources>
        
